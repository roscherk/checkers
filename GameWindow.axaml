    <!-- </Window.Styles> -->
    <RelativePanel x:Name="Screen">
        <Border x:Name="CapturedByBlackBorder"
                Width="205"
                Height="255"
                Margin="25,30"
                BorderBrush="Black"
                BorderThickness="2"
                CornerRadius="2">
            <Canvas x:Name="CapturedByBlack"/>
        </Border>
        <Border x:Name="StatusBorder"
                RelativePanel.Below="CapturedByBlackBorder"
                RelativePanel.AlignLeftWith="CapturedByBlackBorder"
                Width="205"
                Height="35"
                Margin="25,100"
                BorderBrush="Black"
                BorderThickness="2"
                CornerRadius="2"><TextBlock x:Name="GameStatus" Text="Ход белых" FontSize="22" TextAlignment="Center"/>
        </Border>
        <Border x:Name="CapturedByWhiteBorder"
                RelativePanel.Below="StatusBorder"
                Width="205"
                Height="255"
                Margin="25,29"
                BorderBrush="Black"
                BorderThickness="2"
                CornerRadius="2">
            <Canvas x:Name="CapturedByWhite"/>
        </Border>
        
        <Canvas x:Name="CanvasDrag"
                Margin="250,30">
            <Border HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BorderBrush="Black"
                    BorderThickness="2"
                    CornerRadius="3">
                <Grid x:Name="Field"
                      ColumnDefinitions="100,100,100,100,100,100,100,100"
                      RowDefinitions="100,100,100,100,100,100,100,100">
                </Grid>
            </Border>
        </Canvas>
    </RelativePanel>
    
</Window>
