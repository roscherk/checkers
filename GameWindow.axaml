<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="checkers.GameWindow"
        Title="GameWindow">
    <Border BorderBrush="Black"
            BorderThickness="2"
            CornerRadius="3">
        <RelativePanel
            x:Name="Field"
            Background="Green"
            Height="800"
            Width="800"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Rectangle x:Name="S00" Fill="White" Height="100" Width="100"/>
            <Rectangle x:Name="S01" Fill="Brown" Height="100" Width="100" RelativePanel.RightOf="S00"/>
            <Rectangle x:Name="S02" Fill="White" Height="100" Width="100" RelativePanel.RightOf="S01"/>
            <Rectangle x:Name="S03" Fill="Brown" Height="100" Width="100" RelativePanel.RightOf="S02"/>
            <Rectangle x:Name="S04" Fill="White" Height="100" Width="100" RelativePanel.RightOf="S03"/>
            <Rectangle x:Name="S05" Fill="Brown" Height="100" Width="100" RelativePanel.RightOf="S04"/>
            <Rectangle x:Name="S06" Fill="White" Height="100" Width="100" RelativePanel.RightOf="S05"/>
            <Rectangle x:Name="S07" Fill="Brown" Height="100" Width="100" RelativePanel.RightOf="S06"/>
            
            <Rectangle x:Name="S10" Fill="Brown" Height="100" Width="100" RelativePanel.Below="S00"/>
            <Rectangle x:Name="S11" Fill="White" Height="100" Width="100" RelativePanel.RightOf="S10" RelativePanel.Below="S01"/>
            <Rectangle x:Name="S12" Fill="Brown" Height="100" Width="100" RelativePanel.RightOf="S11" RelativePanel.Below="S02"/>
            <Rectangle x:Name="S13" Fill="White" Height="100" Width="100" RelativePanel.RightOf="S12" RelativePanel.Below="S03"/>
            <Rectangle x:Name="S14" Fill="Brown" Height="100" Width="100" RelativePanel.RightOf="S13" RelativePanel.Below="S04"/>
            <Rectangle x:Name="S15" Fill="White" Height="100" Width="100" RelativePanel.RightOf="S14" RelativePanel.Below="S05"/>
            <Rectangle x:Name="S16" Fill="Brown" Height="100" Width="100" RelativePanel.RightOf="S15" RelativePanel.Below="S06"/>
            <Rectangle x:Name="S17" Fill="White" Height="100" Width="100" RelativePanel.RightOf="S16" RelativePanel.Below="S07"/>
            
        </RelativePanel>
    </Border>
</Window>
